<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ev_surface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ev_primary"
        android:background="@color/ev_primary"
        android:elevation="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:titleCentered="true"
        app:titleTextColor="@color/ev_on_primary" />

    <FrameLayout
        android:id="@+id/operator_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/op_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:menu="@menu/menu_operator_bottom"
        app:labelVisibilityMode="labeled" />
</LinearLayout>
